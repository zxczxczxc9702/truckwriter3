{
    "name": "truckwriter-desktop",
    "version": "1.0.0",
    "description": "TruckWriter 블로그 자동 생성 프로그램",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dev": "electron .",
        "build": "electron-builder",
        "build:win": "electron-builder --win"
    },
    "author": "TruckWriter",
    "license": "UNLICENSED",
    "private": true,
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "dependencies": {
        "selenium-webdriver": "^4.15.0",
        "chromedriver": "^119.0.0"
    },
    "build": {
        "appId": "com.truckwriter.desktop",
        "productName": "TruckWriter",
        "directories": {
            "output": "dist"
        },
        "win": {
            "target": "nsis",
            "icon": "icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "installerIcon": "icon.ico",
            "uninstallerIcon": "icon.ico",
            "installerHeaderIcon": "icon.ico",
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        }
    }
}